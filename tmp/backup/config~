# hide/unhide i3status bar
#bindsym $mod+m bar mode toggle
# i3lock
mode "betterlockscreen: Return to lock/Escape to Cancel" {
	bindsym Return mode "default" exec --no-startup-id betterlockscreen -l dim
	bindsym Escape mode "default"
}
bindsym $mod+shift+x exec --no-startup-id betterlockscreen -l dim
#bindsym $mod+Shift+x exec --no-startup-id blurlock

#===power manager===
set $mode_system select: lock(L) exit(E) reboot(R) poweroff(O) cancel(Esc)
bindsym $mod+Shift+e mode "$mode_system"
mode "$mode_system" {
		bindsym l exec --no-startup-id betterlockscreen -l dim, mode "default"
		bindsym e exec --no-startup-id i3-msg exit, mode "default"
		bindsym r exec --no-startup-id systemctl reboot, mode "default"
		bindsym o exec --no-startup-id systemctl poweroff, mode "default"
		bindsym Escape mode "default"
}
